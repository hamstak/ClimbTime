</body>
<script>
    function termChoose(term) {
        var buttonString = "Term: (" + term + ")";
        this.document.getElementById("termButton").innerText = buttonString;
        this.document.getElementById("termField").value = term;
    }

    @{  string tempDS;
        if (Model == null) {
            tempDS = "";
        }
        else {
            tempDS = Model.days;
        }
    }
        var dayBoxes = this.document.getElementsByName("dayField");
        var dayIter = 0;
        var jsDayString = '@tempDS';
    for (dayIter = 0; dayIter < dayBoxes.length; dayIter++) {
        if(jsDayString.includes(dayBoxes[dayIter].value))
        {
            dayBoxes[dayIter].checked=true;
            
        }
    }

</script>