@{
}

@{
    ViewData["Title"] = "Home Page";
}



<body>
    @*
        First Panel
    *@
    <div class="container col-md-5 col-md-offset-1 panel panel-default">
        User Information
        <div class="col-md-8 col-md-offset-2 vert-offset-top-20">
            <form class="form-horizontal">
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="AddName"><strong>Name:</strong></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="first last">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="AddPhone"><strong>Phone:</strong></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="***-***-****">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="AddAddress"><strong>Address:</strong></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="123 n st cheney wa 99004">
                        </div>
                    </div>
                </div>
                </form>
                <div class="panel panel-default col-md-5 col-md-offset-2" id="cardSwipeBox">
                    <div class="panel-heading">Initial Card Swipe</div>
                    <div class="panel-body">
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Card Swipe" id="Text1">
                            </div>
                        </form>
                    </div>
                </div>
            <form>
                <button class="btn btn-primary">Next</button>
            </form>
        </div>

        @*
            Second panel
        *@
        <div class="panel panel-default col-md-5 col-md-offset-2" id="cardSwipeBox">
            <div class="panel-heading">Initial Card Swipe</div>
            <div class="panel-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Card Swipe" id="Text1">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container col-md-5 col-md-offset-1 panel panel-default">
        <div class="panel-body">
            <form asp-controller="BatchAddClimbers" asp-action="x">
                <div id="scrollview" style="overflow:scroll;height:400px">
                    @*Code for users who have signed up in batch group*@
                </div>
            </form>
        </div>
    </div>
</body>